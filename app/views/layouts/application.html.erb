<!DOCTYPE html>
<html>
  <head>
    <title>Take3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%# <p class="notice"><%= notice %>
    <%# <p class="alert"><%= alert %>
    <% if user_signed_in? %>
    <div class="nav_box">
      <div class="nav_p">
        <p>Hello, <%= current_user.name %>! You are currently logged in.</p>
      </div>
      
      <div class="nav_logout">
        <div class="button">
          <%= link_to 'Movies', movies_path %>
        </div>
        <% unless params.has_key? (:movie_id) %>
        <div class="button">
          <%= link_to 'New Movie', new_movie_path %>
        </div>
        <% end %>
        <% if params.has_key? (:movie_id) %>
        <div class="button">
          <%= link_to 'New Review', new_movie_review_path %>
        </div>
        <% end %>
        <div class="button">
          <%= link_to 'Log Out', destroy_user_session_path, method: :delete if current_user %>
        </div>
      </div>
    </div>
    <% end %>

    <%= yield %>
  </body>
</html>

