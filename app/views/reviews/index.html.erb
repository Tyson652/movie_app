<head>
  <%= stylesheet_link_tag "review_index" %>
</head>

<body>
  <section>
    <div class="movies">
      <div class="movie_info">
        <p id="notice"><%= notice %></p>
        <h1 class="title"><%= @movie.title %></h1>

        <p>
          <%= @movie.description %>
        </p>

        <p>
          <strong>Genre:</strong>
          <%= @movie.genre %>
        </p>

        <p>
          <strong>Runtime:</strong>
          <%= @movie.runtime %>
        </p>

          <p>
          <strong>Movie Added By:</strong>
          <%= User.find(@movie.user_id).name %>
        </p>

        <%= form_with do |form| %>
        <div class="field">
          <%= form.label :Like %>
          <%= form.check_box :Like %>
        </div>
        <% end %>
        <% if :Like == true %>
        <% puts "Yesssssssssssssss!" %>
        <% end %>
      </div>
      
      <div class="image">
          <% if current_user.id == @movie.user_id %>
          <div class="movie_div_buttons">
            <div class="movie_button">
              <%= link_to 'Edit Movie', edit_movie_path(@movie) %>
            </div>
            <div class="movie_button">
              <%= link_to 'Delete Movie', @movie, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
            <% end %>
            <% if @truth == true %> 
            <%# <% if Like.where(user_id: current_user.id).where(movie_id: params[:id]).exists? == true %> 
             <div class="movie_button">
              <%= link_to 'Liked', likes_movie_path(@movie) %>
            </div>
            <% else %>
            <div class="movie_button">
              <%= link_to 'Like', likes_movie_path(@movie) %>
            </div>
            <% end %>
          </div>
          <%= image_tag(@movie.poster) %>
      </div>
    </div>
    <h2>Reviews</h2>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Rating</th>
          <th>Author</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= review.title %></td>
            <td><%= review.content %></td>
            <td><%= review.rating %></td>
            <td><%= User.find(review.user_id).name %></td>
            <% if current_user.id == review.user_id %>
            <td><%= link_to 'Edit', edit_movie_review_path(review.movie, review) %></td>
            <td><%= link_to 'Delete', movie_review_path(review.movie, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %> 
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</body>




